{% extends '@XengCmsAdmin/admin/layout.html.twig' %}
{% trans_default_domain 'admin' %}
{% set page_title = 'xeng.admin.page.title.user.edit' | trans ~ ': ' ~ user.username %}

{% block content %}

    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="{{ currentTab=='general'?'active':'' }}">
                <a href="{{ path('xeng.admin.user.edit',{'userId': user.id}) }}"
                   aria-expanded="false">General</a>
            </li>
            <li class="{{ currentTab=='roles'?'active':'' }}">
                <a href="{{ path('xeng.admin.user.edit.roles',{'userId': user.id}) }}"
                   aria-expanded="false">Roles</a>
            </li>
        </ul>
        <div class="tab-content">
            {% block tabcontent %}
            {% endblock %}
        </div>
        <!-- /.tab-content -->
    </div>

{% endblock %}




